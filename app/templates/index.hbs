<div class="container">
  {{outlet}}
  <div class="frame-plane pull-left">
    <div class ="frame-inner">
      <img class="author-icon" src="{{user.avatar_url}}"><a class="author-link" href="{{user.url}}">{{user.login}}</a>
    </div>
  </div>
  <div class="clearfix"></div>
  {{#each gist in gists}}
  <div class="frame-plane gist">
    <div class="frame-inner">
      {{#link-to 'gist' gist}}{{gist.description}}{{/link-to}}
      <div><span class="pull-right gist-updated_at">{{gist.updated_at}}</span></div><div class="clearfix"></div>
    </div>
  </div>
  {{/each}}
</div>
